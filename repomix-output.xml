export const getStaticPaths = (async () => {
  const posts = await getPosts()
  return posts.map((post, idx) => {
    const prev = posts[idx - 1]
    const next = posts[idx + 1]
    return {
      params: { id: post.id },
      props: { entry: post, next, prev },
